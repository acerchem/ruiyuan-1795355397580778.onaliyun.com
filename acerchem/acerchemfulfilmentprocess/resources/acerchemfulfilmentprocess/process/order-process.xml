<process xmlns="http://www.hybris.de/xsd/processdefinition" start="checkOrder" name="order-process" processClass="de.hybris.platform.orderprocessing.model.OrderProcessModel">

	<action id="checkOrder" bean="checkOrderAction">
		<transition name="OK" to="waitForAllConfirm"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<wait id="waitForAllConfirm" prependProcessCode="true" then="failed">
        <case event="ConfirmActionEvent">
            <choice id="waitForCustomerConfirm" then="waitForConfirm"/>
            <choice id="waitForEmployeeConfirm" then="waitForConfirm"/>
        </case>
    </wait> 
	
	<action id="waitForConfirm" bean="waitForConfirmAction">
		<transition name="OK" to="generateContactEmail"/>
		<transition name="NOK" to="waitForAllConfirm"/>
	</action>
	 
	<action id="generateContactEmail" bean="generateContactEmailAction">
		<transition name="OK" to="sendContactEmail"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="sendContactEmail" bean="sendEmail">
		<transition name="OK" to="choosePayMode"/>
	</action>
	
	<action id="choosePayMode" bean="choosePayModeAction">
		<transition name="OK" to="creditPayMode"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="creditPayMode" bean="creditPayModeAction">
		<transition name="OK" to="success"/>
	</action>
	
	<action id="linePayMode" bean="linePayModeAction">
		<transition name="OK" to="generateFormInvoiceEmail"/>
	</action>
	
	<action id="generateFormInvoiceEmail" bean="generateFormInvoiceEmailAction">
		<transition name="OK" to="sendFormInvoiceEmail"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<action id="sendFormInvoiceEmail" bean="sendEmail">
		<transition name="OK" to="waitForAllConfirmPay"/>
	</action>
	
		<wait id="waitForAllConfirmPay" prependProcessCode="true" then="failed">
        <case event="ConfirmPayActionEvent">
            <choice id="waitForCustomerConfirmPay" then="waitForConfirmPay"/>
            <choice id="waitForEmployeeConfirmPay" then="waitForConfirmPay"/>
        </case>
    </wait> 
	<action id="waitForConfirmPay" bean="waitForConfirmPayAction">
		<transition name="OK" to="success"/>
		<transition name="NOK" to="waitForAllConfirmPay"/>
	</action>
	
	<end id="error" state="ERROR">All went wrong.</end>
	<end id="failed" state="FAILED">Order not placed.</end>
	<end id="success" state="SUCCEEDED">Order placed.</end>

</process>